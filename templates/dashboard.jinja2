                        <button type="button" class="btn btn-danger" style="padding: 0 15px;" onclick="removeMember(this)"><i class="fas fa-times"></i></button>
                    </div>
                </div>
                <button type="button" class="btn" style="background: #f0f2f5; color: #636e72; width: 100%; margin-top: 10px;" onclick="addMemberRow()">
                    <i class="fas fa-plus"></i> Th√™m th√†nh vi√™n kh√°c
                </button>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%; justify-content: center;">T·∫°o ngay</button>
